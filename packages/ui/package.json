{
	"name": "@packages/ui",
	"type": "module",
	"private": true,
	"description": "UI components",
	"version": "0.1.0",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"src/**/*.{js,jsx,ts,tsx}": "pnpm run lint",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start": "run-p build:watch build:types:watch",
		"build:watch": "vite build --watch",
		"build:package": "vite build && pnpm run build:types",
		"build:types": "tsc -p tsconfig.build.json",
		"build:types:watch": "tsc -p tsconfig.build.json --watch",
		"dev": "pnpm run storybook:dev",
		"storybook:dev": "storybook dev -p 6008 --quiet --ci",
		"storybook:build": "storybook build",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui --open",
		"test:unit:ci": "vitest related --run",
		"test:unit:changed": "vitest --changed origin/master --run",
		"lint": "biome lint ./src",
		"lint:fix": "biome check --apply ./src",
		"lint:ci": "biome check --apply ./src --files-ignore-unknown=true --no-errors-on-unmatched",
		"typecheck": "tsc",
		"static-analysis:ci": "run-p typecheck lint:ci",
		"static-analysis:local": "run-p typecheck lint",
		"find-deadcode": "ts-prune --error --ignore \"./index.ts|mocks/(SVGMock|CSSMock).ts|src/test-utils.tsx|src/.*\\.stories\\.tsx\"",
		"clean:dist": "rimraf dist",
		"clean": "rimraf .turbo && rimraf dist && rimraf node_modules"
	},
	"devDependencies": {
		"@packages/global-types": "workspace:*",
		"@packages/tsconfig": "workspace:*",
		"@packages/utils": "workspace:*",
		"@storybook/addon-a11y": "7.6.16",
		"@storybook/addon-essentials": "7.6.16",
		"@storybook/addon-interactions": "7.6.16",
		"@storybook/addon-links": "7.6.16",
		"@storybook/blocks": "7.6.16",
		"@storybook/react": "7.6.16",
		"@storybook/react-vite": "7.6.16",
		"@storybook/test": "7.6.16",
		"storybook": "7.6.16",
		"storybook-addon-pseudo-states": "2.1.2",
		"storybook-addon-root-attributes": "2.1.3"
	},
	"peerDependencies": {
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "7.50.1",
		"react-router-dom": "6.22.1",
		"styled-components": "6.1.8"
	}
}
